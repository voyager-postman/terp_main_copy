{
	"$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"useExhaustiveDependencies": "warn"
			},
			"nursery": {
				"noUnusedImports": "error"
			},
			"suspicious": {
				"noDoubleEquals": "off"
			},
			"a11y": {
				"useValidAnchor": "warn"
			}
		}
	}
}
